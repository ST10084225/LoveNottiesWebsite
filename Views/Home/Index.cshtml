@model NottiesRebuiltV3.Models.NewsLetterModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<body id="page-top">
    <!-- Navigation-->
    <!-- Masthead-->
    <header class="masthead">
        <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
            <div class="d-flex justify-content-center">
                <div class="text-center">
                    <h1 class="mx-auto my-0 text-uppercase">Hlonipha</h1>
                    <h2 class="text-white-50 mx-auto mt-2 mb-5">
                        Respect for oneself, for others, and for the environment
                    </h2>
                    <a class="btn btn-primary" href="#about">About Us</a>
                </div>
            </div>
        </div>
    </header>
    <!-- About-->
    <section class="about-section text-center" id="about">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-lg-8">
                    <h2 class="text-white mb-4">About Us</h2>
                    <img class="img-fluid mb-5" src="https://lovenottiesblob.blob.core.windows.net/miscimages/logopng.png" alt="..." />
                    <p class="text-white-50 mb-5">
                        Love Notties is a Non-Profit Company creating a catalyst for transformation. We aim to unite our community for positive change, as we believe we are better together. We dream of a prosperous village where dreams are discovered, and hope is renewed. A place of inspiration, joy, and life. A community that knows how to love and be loved. We dream of a village where all races, genders, ages, and classes live united, working together to benefit others and the environment. A place of opportunity, security, and peace. A place of healing, belonging and trust.Love Notties is a Non-Profit Company creating a catalyst for transformation. We aim to unite our community for positive change, as we believe we are better together. We dream of a prosperous village where dreams are discovered, and hope is renewed. A place of inspiration, joy, and life. A community that knows how to love and be loved. We dream of a village where all races, genders, ages, and classes live united, working together to benefit others and the environment. A place of opportunity, security, and peace. A place of healing, belonging and trust.
                    </p>
                </div>
            </div>
            
        </div>
    </section>
    <!-- Projects-->
    <section class="signup-section bg-light" id="projects">
        <div class="container px-4 px-lg-5">
            <!-- Featured Project Row-->
            <div class="row gx-0 mb-lg-5 align-items-center">
                <div class="col-xl-8 col-lg-7"><img class="img-fluid mb-3 mb-lg-0" src="https://lovenottiesblob.blob.core.windows.net/miscimages/dclogo.jpg" alt="..." /></div>
                <div class="col-xl-4 col-lg-5 order-lg-first">
                    <div class="featured-text text-center text-lg-left">
                        <h4>Dream Centre</h4>
                        <p class="text-black-50 mb-0">At the heart of Nottingham Road, you'll find the Dream Centre, located within Midlands Community College. Here, we deliver training programs designed to eliminate the hurdles hindering individuals from entering the job market. Our mission centres around bridging the skills gap within our workforce. Through engaging lectures, role-playing scenarios, assignments, and mentorships, our programs shape individuals into employable adults. We instil a resolute work ethic and a commitment to excellence, fostering a new generation of professionals poised for success.</p>
                        <a class="btn btn-primary" asp-action="Index" asp-controller="DreamCentre">View</a>
                    </div>
                </div>
            </div>
            <!-- Project One Row-->
            <div class="bg_glass row gx-0 mt-5 mb-lg-0 justify-content-center">
                <div class="col-lg-6"><img class="img-fluid" src="https://lovenottiesblob.blob.core.windows.net/miscimages/humanityimage.jpg" alt="..." /></div>
                <div class="col-lg-6">
                    <div class="text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-left">
                                <h4 class="text-white">Humanity</h4>
                                <p class="mb-0 text-white-50">Love Notties is dedicated to addressing the critical humanitarian needs within our community. Our primary focus revolves around ensuring food security and lending a helping hand within our community, particularly within local schools and at our Early Childhood Development Centres. We at Love Notties aim to make a lasting and positive impact on the lives of those we serve.</p>
                                <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="Humanity">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Project Two Row-->
            <div class="bg_glass row gx-0 mt-5 justify-content-center">
                <div class="col-lg-6"><img class="img-fluid" src="https://lovenottiesblob.blob.core.windows.net/miscimages/recycling.jpg" alt="..." /></div>
                <div class="col-lg-6 order-lg-first">
                    <div class="text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-right">
                                <h4 class="text-white">Environment</h4>
                                <p class="mb-0 text-white-50">Love Notties is a dedicated champion for the environment, unwavering in its commitment to preserving the natural beauty of Nottingham. Through frequent litter clean-ups, the organization maintains clean streets, parks, and natural areas. Beyond clean-up efforts, they vigilantly monitor air, water, and soil quality, safeguarding both the ecosystem and residents.</p>
                                <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="Recycling">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

                     <!-- Project Three Row-->
    <div class="bg_glass row gx-0 mt-5 mb-lg-0 justify-content-center">
                <div class="col-lg-6"><img class="img-fluid" src="https://lovenottiesblob.blob.core.windows.net/miscimages/eduimage.jpg" alt="..." /></div>
        <div class="col-lg-6">
          <div class="text-center h-100 project">
                <div class="d-flex h-100">
                    <div class="project-text w-100 my-auto text-center text-lg-left">
                        <h4 class="text-white">Education</h4>
                        <p class="mb-0 text-white-50">We provide the ingredients for 2 EDC centres: Siyakhula ans Sikhulile. This is a feeding scheme that gives each child breakfast, lunch and a snack daily whilst at school. We work closely with these schools and often provide any extra support that may be needed either financially or with man power.</p>
                        <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="FeedingEDC">View</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

            <!-- Project Three Row-->
            <div class="bg_glass row gx-0 mt-5 mb-lg-0 justify-content-center">
                <div class="col-lg-6"><img class="img-fluid" src="https://lovenottiesblob.blob.core.windows.net/miscimages/tokenshopimage.jpg" alt="..." /></div>
                <div class="col-lg-6">
                    <div class="text-center h-100 project">
                        <div class="d-flex h-100">
                            <div class="project-text w-100 my-auto text-center text-lg-left">
                                <h4 class="text-white">Token Shop</h4>
                                <p class="mb-0 text-white-50">Together with our recycling program we offer a local token shop for those in need. People can exchange their recycling goods for tokens which can then be used to purchase items from our shop.</p>
                                <a class="btn btn-primary mt-2" asp-action="Index" asp-controller="GetInvolved">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="bg_glass container px-4 mt-5 px-lg-5" style="padding:2rem">
            <div class="row gx-4 gx-lg-5">
                <div class="col-md-10 col-lg-8 mx-auto text-center">
                    <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
                    <h2 class="text-white mb-5">Subscribe to our Newsletter to receive updates!</h2>
                    <form asp-action="Create" asp-controller="Home" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- Email address input-->
                        <div class="row input-group-newsletter">
                            <div class="col">
                                <div class="form-group">
                                    <input asp-for="Email" type="email" placeholder="Enter your email address..." class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary align-content-center justify-content-center text-center" style="height:1rem; display: flex; justify-content: center; align-items: center;">Notify Me!</button>
                                </div>
                            </div>
                        </div>
                    </form>

                    @if (SignInManager.IsSignedIn(User) & User.IsInRole("Manager"))
                    {
                        <a class="btn btn-primary mt-2 justify-content-center" asp-action="Index" asp-controller="GetEmails">Get User Emails</a>
                    }
                </div>
            </div>
        </div>
  
    </section>

    <!-- Contact-->
    <section class="contact-section bg-black">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5">
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-map-marked-alt text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">Address</h4>
                            <hr class="my-4 mx-auto" />
                            <div class="small text-black-50">103 Old Main Road, Nottingham Road, 3280 (Midlands Animal Feeds)</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-envelope text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">Email</h4>
                            <hr class="my-4 mx-auto" />
                            <div class="small text-black-50"><a href="#!">lovenotties@gmail.com</a></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="card py-4 h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-mobile-alt text-primary mb-2"></i>
                            <h4 class="text-uppercase m-0">Phone</h4>
                            <hr class="my-4 mx-auto" />
                            <div class="small text-black-50">065–738-5818</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="social d-flex justify-content-center">
                <a class="mx-2" href="https://www.instagram.com/love_notties/"><i class="fab fa-instagram"></i></a>
                <a class="mx-2" href="https://www.facebook.com/lovenotties/"><i class="fab fa-facebook-f"></i></a>
            </div>
        </div>
    </section>
</body>