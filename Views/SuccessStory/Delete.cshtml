@model NottiesRebuiltV3.Models.SuccessStory

@{
    ViewData["Title"] = "Delete";
}
<body>
    <section class="about-section text-white">
        <h2 class="m-2">Delete this Success Story Post</h2>
        <hr />
        <div class="row m-2">
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-sm-2">
                        Title:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SuccessStoryTitle)
                    </dd>
                    <dt class="col-sm-2">
                        ID:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SuccessStoryID)
                    </dd>
                    <dt class="col-sm-2">
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SuccessStoryDescription)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="SuccessStoryID" />
                    <input type="submit" value="Delete" class="btn btn-danger mt-2" />
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="mt-2">Back to List</a>
        </div>
    </section>
</body>