@model NottiesRebuiltV3.Models.BlogItem

@{
    ViewData["Title"] = "Delete";
}
<body>
    <section class="about-section text-white">
        <h2 class="m-2">Are you sure you want to delete this blog post?</h2>
        <hr />
        <div class="row m-2">
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-sm-2">
                       ID:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BlogID)
                    </dd>
                    <dt class="col-sm-2">
                        Description:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BlogDescription)
                    </dd>
                    <dt class="col-sm-2">
                        Views:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BlogViews)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="BlogID" />
                    <input type="submit" value="Delete" class="btn btn-danger mt-2" />
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="mt-2">Back to List</a>
        </div>
    </section>
</body>
