@model NottiesRebuiltV3.Models.BlogItem

@{
    ViewData["Title"] = "Create";
}
<body>
    <section class="about-section text-white">
        <h2 class="m-2">Create a new blog post</h2>
        <hr />
        <div class="row m-2">
            <div class="col-md-4">
                <form asp-controller="Blog" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BlogTitle" class="control-label">Title</label>
                        <input asp-for="BlogTitle" class="form-control" />
                        <span asp-validation-for="BlogTitle" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-top:10px">
                        <label asp-for="BlogImageFile" class="control-label">Upload Image</label>
                        <input type="file" asp-for="BlogImageFile" accept="image/*" class="form-control" />
                        <span asp-validation-for="BlogImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BlogDescription" class="control-label">Description</label>
                        <input asp-for="BlogDescription" class="form-control" />
                        <span asp-validation-for="BlogDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary mt-2" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="mt-2">Back to List</a>
        </div>
    </section>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
