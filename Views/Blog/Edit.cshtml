@model NottiesRebuiltV3.Models.BlogItem

@{
    ViewData["Title"] = "Edit";
}
<body>
    <section class="about-section text-white">
        <h2 class="m-2">Edit this blog post</h2>
        <hr />
        <div class="row m-2">
            <div class="col-md-4">
                 <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogID" />
            <input type="hidden" asp-for="BlogViews" />
            <input type="hidden" asp-for="BlogDate" />
            <input type="hidden" asp-for="BlogImageID" />
            <div class="form-group">
                <label asp-for="BlogTitle" class="control-label"></label>
                <input asp-for="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlogDescription" class="control-label"></label>
                <input asp-for="BlogDescription" class="form-control" />
                <span asp-validation-for="BlogDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-2" />
            </div>
        </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="mt-2">Back to List</a>
        </div>
    </section>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
